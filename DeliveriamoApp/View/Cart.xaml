    <VerticalStackLayout>
        <ScrollView MaximumHeightRequest="300" VerticalOptions="Fill">
            <ListView
                    ItemsSource="{Binding CartItems}"
                    VerticalOptions="Center">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="10" ColumnSpacing="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Label Text="Ciao"></Label>
                                <Label
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        FontAttributes="Bold"
                                        FontSize="Title"
                                        Text="{Binding Name}"
                                        VerticalOptions="CenterAndExpand"
                                        Padding="30"/>
                                <Label
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        FontAttributes="Bold"
                                        FontSize="Title"
                                        Text="CIAO"
                                        VerticalOptions="CenterAndExpand"
                                        Padding="30"/>
                                <Label
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        FontAttributes="Bold"
                                        FontSize="Subtitle"
                                        Text="{Binding Description}"
                                        VerticalOptions="CenterAndExpand"
                                        Padding="30"/>
                                <Label
                                        Grid.Row="0"
                                        Grid.Column="3"
                                        FontAttributes="Bold"
                                        FontSize="Subtitle"
                                        Text="{Binding PriceUnit, StringFormat='{0}â‚¬'}"
                                        VerticalOptions="CenterAndExpand"
                                        Padding="30"/>

                                <!--<Button 
                                        Text="rimuovi dal carrello" 
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Clicked="Button_Clicked"
                                        Command="{Binding RemoveFromCart}"/>-->
                                <Image Source="{Binding UrlImage}" HeightRequest="30" Aspect="AspectFill" Grid.Row="0" Grid.Column="0"/>

                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>