<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeliveriamoApp.View.Home"
             xmlns:local="clr-namespace:DeliveriamoApp.ViewModel"
             Title="Home">
    <ContentPage.BindingContext>
        <local:HomeViewModel />
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button x:Name="SupermercatiButton" Text="Supermercati" Grid.Row="1" Grid.Column="0" HorizontalOptions="Center" Clicked="SupermercatiButton_Clicked" VerticalOptions="Center" />
            <Button x:Name="RistorantiButton" Text="Ristoranti" Grid.Row="1" Grid.Column="1" HorizontalOptions="Center" Clicked="RistorantiButton_Clicked" VerticalOptions="Center"/>

        </Grid>
    </VerticalStackLayout>
</ContentPage>